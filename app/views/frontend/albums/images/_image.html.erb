<%= turbo_frame_tag image do %>
  <div class="w-1/2 md:w-full mx-auto dark:text-white shadow-lg shadow-slate-950 rounded-xl overflow-hidden xl:opacity-60 xl:hover:opacity-100">
    <figure class="aspect-w-4 aspect-h-3 overflow-hidden">
      <%= image_tag url_for(image), 
                    data: { src: "#{rails_blob_url(image)}"}, 
                    class: "object-cover"%>
    </figure>
    <%#= render 'active_storage/blobs/blob', blob: image %>
  </div>
<% end %>
