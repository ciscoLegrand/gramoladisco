


<div class="main-h-screen bg-gray-800 py-6 flex flex-col justify-center sm:py-12">
  <div class="relative py-3 sm:max-w-xl sm:mx-auto">
    <div
        class="absolute inset-0 bg-gradient-to-r from-indigo-700 to-purple-500 shadow-lg transform -skew-y-6 sm:skew-y-0 sm:-rotate-6 sm:rounded-3xl">
    </div>
    <div class="text-white relative px-4 py-10 bg-indigo-400 shadow-lg sm:rounded-3xl sm:p-10">

      <div class="text-center pb-6">
          <h1 class="text-3xl">Contact Us!</h1>

          <p class="text-gray-300">
              Fill up the form below to send us a message.
          </p>
      </div>

      <%= turbo_frame_tag :new_contact, src: new_contact_path, load: :lazy do %>
        <div class="flex gap-4">
          <span class="w-6 h-6 bg-indigo-300 border rounded-full p-2 animate-pulse duration-100">  </span>
          <span class="w-6 h-6 bg-indigo-300 border rounded-full p-2 animate-pulse duration-100 delay-500">  </span>
          <span class="w-6 h-6 bg-indigo-300 border rounded-full p-2 animate-pulse duration-100 delay-2000">  </span>
        </div>
      <% end %>
    </div>
  </div>
</div>