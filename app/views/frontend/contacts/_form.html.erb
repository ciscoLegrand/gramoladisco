<%= form_with(model: contact, url: contacts_path, class: "contents") do |form| %>
  <% if contact.errors.any? %>
    <div id="error_explanation" class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative" role="alert">
      <strong class="font-bold">Oops!</strong>
      <span class="block sm:inline"><%= pluralize(contact.errors.count, "error") %> prohibited this contact from being saved:</span>
      <ul class="list-disc list-inside">
        <% contact.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="flex justify-center items-center gap-8">
    <div class="flex flex-col justify-center items-start gap-4">
      <%= form.label :title, class: "block text-gray-700 text-sm font-bold mb-2" %>
      <%= form.text_field :title,
                          placeholder: 'Asunto a tratar',
                          class: "shadow mb-4 appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
    </div>
    <div class="flex flex-col justify-center items-start gap-4">
      <%= form.label :email, class: "block text-gray-700 text-sm font-bold mb-2" %>
      <%= form.email_field :email,
                            placeholder: 'Email de contacto',
                            class: "shadow mb-4 appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
    </div>
  </div>

  <div class="mb-6">
    <%= form.label :subject, class: "block text-gray-700 text-sm font-bold mb-2" %>
    <div id="blank-toolbar" hidden></div>
    <%= form.rich_text_area :subject,
                            placeholder: 'Escribe tu mensaje aquÃ­...',
                            toolbar: "blank-toolbar",
                            class: "trix-content min-h-[4rem] bg-white shadow mb-4 appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>

  </div>

  <div class="flex items-center justify-between">
    <%= form.submit "Enviar", class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline cursor-pointer" %>
  </div>
<% end %>

