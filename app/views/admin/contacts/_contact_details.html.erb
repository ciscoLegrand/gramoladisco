
  <style>
    .span-all { grid-column: span 3;}
  </style>
  <div id="<%= dom_id(@contact) %>" class="w-full flex flex-col py-2 mb-4 text-slate-300">
    <div class="w-full flex flex-col gap-12">
      <div class="w-full flex justify-between items-center gap-12">
        <div class="w-full flex flex-col 2xl:grid 2xl:grid-cols-2 gap-6 px-4 py-4 border border-slate-700 rounded-xl shadow-lg shadow-gray-950 bg-slate-700  text-xl">
          <h3 class="w-full font-semibold whitespace-nowrap text-xl">
            <%= @contact.email %>
          </h3>

          <h5 class="text-lg whitespace-nowrap text-right">
            <%= @contact.created_at.strftime('%d-%m-%Y [%H:%M] ') %>
          </h5>
        </div>
        <%= link_to t('.back'), :back, data: { turbo_frame: "contacs" }, class: 'w-1/5 py-4 px-6 flex justify-center items-center border border-gray-700 rounded-xl shadow-lg shadow-gray-950 hover:bg-gray-700 text-gray-300 transition-colors duration-500' %>
      </div>
      <div class="w-full flex justify-between items-center gap-12">
        <h2 class="w-full text-3xl bg-slate-800 rounded-xl shadow-lg shadow-gray-950 py-3 px-6">
          <%= @contact.title %>
        </h2>
      </div>

      <div class="w-full min-h-[28rem] flex justify-center items-start gap-4 px-12 py-16 border border-slate-700 rounded-xl shadow-lg shadow-gray-950 bg-slate-700 text-xl">
        <%= raw @contact.subject.body %>
      </div>
    </div>
  </div>