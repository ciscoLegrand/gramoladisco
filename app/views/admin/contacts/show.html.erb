<div  id="<%= dom_id(@contact) %>" class="w-full flex flex-col bg-slate-800 text-white px-4 py-6 mb-4">
  <div class="w-2/3 mx-auto flex flex-col gap-12">
    <h2 class="w-full font-semibold whitespace-nowrap text-3xl">
      <%= @contact.title %>
    </h2>
    <div class="w-full grid grid-cols-2 gap-6 px-4 py-4">
      <div class="flex justify-start items-center">
        <h3 class="font-semibold whitespace-nowrap text-2xl">
          <%= @contact.email %>
        </h3>
      </div>
      <div class="flex justify-start items-center">
        <h5 class="text-lg whitespace-nowrap">
          <%= @contact.created_at.strftime('%d-%m-%Y [%H:%M] ') %>
        </h5>
      </div>
    </div>
    <div class="w-full min-h-[28rem] flex justify-center items-start gap-4 px-12 py-16 border rounded-xl shadow-slate-200 shadow bg-slate-300 text-slate-900 text-xl">
      <%= raw @contact.subject.body %>
    </div>
  </div>
</div>
