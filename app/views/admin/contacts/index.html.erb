<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">Contacts</h1>
  </div>

  <div id="contacts" class="min-w-full flex flex-col items-center">
    <header class="min-w-full grid grid-cols-4 gap-4 bg-slate-400 py-4 px-2">
      <div class="col-span-1">
        <h2 class="font-bold text-xl">Name</h2>
      </div>
      <div class="col-span-1">
        <h2 class="font-bold text-xl">Email</h2>
      </div>
      <div class="col-span-1">
        <h2 class="font-bold text-xl">Subject</h2>
      </div>
      <div class="col-span-1">
        <h2 class="font-bold text-xl">Actions</h2>
      </div>
    </header>
    <%= render @contacts %>
  </div>
</div>
