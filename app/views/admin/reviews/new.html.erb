<section class="w-full lg:container py-2 px-10 gap-6 flex flex-col justify-center items-center mx-auto">
  <%= turbo_stream_from ["reviews_channel", current_user.to_gid_param].join(":") %>
  <%= button_to("Iniciar Scraping",
                admin_reviews_path,
                method: :post,
                class: "w-content py-4 px-8 bg-slate-900 hover:bg-slate-950 hover:cursor-pointer text-slate-100 rounded-xl") %>
  <article id="reviews" class="w-full px-8 py-12 bg-slate-950 h-[1000px] max-h-[1000px] text-slate-200 rounded-xl overflow-y-auto">
    <div id="reviews_logs" class="px-4 py-4" data-controller="reviews">
  </article>
</section>

<style>
  /* Estilos para el scrollbar en general */
  #reviews::-webkit-scrollbar {
    width: 12px; /* Ancho del scrollbar */
  }

  /* Estilo para la barra de desplazamiento (el "thumb") */
  #reviews::-webkit-scrollbar-thumb {
    background-color: #64748B; /* slate-500 */
    border-radius: 12px; /* rounded-xl */
  }

  /* Estilo para el track del scrollbar */
  #reviews::-webkit-scrollbar-track {
    background: #1E293B; /* slate-950 */
    border-radius: 12px; /* rounded-xl */
  }

  /* Cambios en el estilo del thumb al pasar el mouse */
  #reviews::-webkit-scrollbar-thumb:hover {
    background: #475569; /* Un tono ligeramente m√°s claro que slate-500 para el hover */
  }

  /* Estilos para Firefox */
  #reviews {
    scrollbar-width: thin;
    scrollbar-color: #64748B #1E293B; /* thumb (slate-500) y track (slate-950) */
  }
</style>
