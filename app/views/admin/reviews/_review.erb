
<li id="<%= dom_id review %>"
    data-target="search_results"
    class="min-w-full flex fustify-between items-center lg:grid lg:grid-cols-5 py-2 px-4 text-slate-100 hover:bg-indigo-800 even:bg-slate-700 odd:bg-slate-800 transition-colors ease-in-out duration-500">
  <div class="flex justify-start items-center py-2 px-4 truncate whitespace-nowrap"><%= review.name %></div>
  <div class="flex justify-start items-center py-2 px-4 truncate whitespace-nowrap"><%= review.title %></div>
  <div class="flex justify-end items-center py-2 px-4 truncate whitespace-nowrap"><%= review.date %></div>
  <div class="flex justify-end items-center py-2 px-4 truncate whitespace-nowrap"><%= review.overall_rating %></div>
  <div class="flex justify-end items-center gap-5 py-2 px-4"> 
    <%= link_to inline_svg_tag('icons/shared/eye.svg', class: 'w-6 h-6'),
                admin_review_path(review),
                data: { turbo_frame: "review_details" },
                class: "shadow hover:shadow-lg shadow-blue-400 hover:shadow-blue-200 rounded-full p-1 inline-block transition-colors duration-300 hover:bg-blue-600 text-blue-500 hover:text-white" %>
  </div>
</li>
