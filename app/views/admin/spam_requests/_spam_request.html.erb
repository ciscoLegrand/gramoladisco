<li id="<%= dom_id spam_request %>"
    data-target="search_results"
    class="min-w-full flex fustify-between items-center lg:grid lg:grid-cols-5 py-2 text-slate-100 hover:bg-indigo-800  transition-colors ease-in-out duration-500   bg-slate-400 text-slate-700 font-semibold border-y border-y-slate-500">
  <div class="flex justify-start items-center py-2 px-4 truncate whitespace-nowrap"><%= spam_request.remote_ip %></div>
  <div class="flex justify-start items-center py-2 px-4 truncate whitespace-nowrap"><%= spam_request.action_name %></div>
  <div class="hidden lg:block flex justify-start items-center py-2 px-4 truncate whitespace-nowrap"><%= spam_request.controller_name %></div>
  <div class="flex justify-end items-center py-2 px-4 truncate whitespace-nowrap"><%= spam_request.created_at.strftime('%d-%m-%y %H:%M') %></div>
  <div class="flex justify-end items-center gap-5 py-2 px-4">
    <%= link_to inline_svg_tag('icons/shared/eye.svg', class: 'w-6 h-6'),
            admin_spam_request_path(spam_request),
            class: "shadow hover:shadow-lg shadow-blue-400 hover:shadow-blue-200 rounded-full p-1 inline-block transition-colors duration-300 hover:bg-blue-600 text-blue-500 hover:text-white" %>
    <%= button_to inline_svg_tag('icons/shared/trash.svg', class:'w-6 h-6'),
                  admin_spam_request_path(spam_request),
                  method: :delete,
                  data: { turbo_confirm: t('.confirm_destroy', resource: spam_request.remote_ip) },
                  class: "shadow hover:shadow-lg shadow-red-400 hover:shadow-red-200 rounded-full p-1 inline-block transition-colors duration-300 hover:bg-red-600 text-red-500 hover:text-white" %>
  </div>
</li>
