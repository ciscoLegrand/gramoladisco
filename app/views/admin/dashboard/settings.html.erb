
<section class="container mx-auto my-24 grid grid-cols-1 lg:grid-cols-2 2xl:grid-cols-3 gap-8">
  
  <% if current_user.superadmin? %>
    <!---CARDS QUE SOLAMENTE EL SUPERADMIN PUEDE ACCEDER -->
    <article class="font-bold px-8 py-2 flex flex-nowrap gap-4 bg-slate-950 rounded-xl shadow-lg shadow-gray-950">
      <%= link_to tasks_admin_dashboard_index_path, class:"flex justify-center items-center gap-4 text-slate-300" do %>
        <%= inline_svg_tag('icons/user/settings-cog.svg', class: 'w-12 h-12 mx-8')%>
        <div class="border-l border-l-slate-300 px-8 py-12">
          <h1 class="text-2xl font-bold text-slate-100">Settings</h1>
          <p class="text-slate-300">Manage your settings</p>
        </div>
      <% end %>
    </article>
    
    <article class="font-bold px-8 py-2 flex flex-nowrap gap-4 bg-slate-950 rounded-xl shadow-lg shadow-gray-950">
      <%= link_to spaces_admin_dashboard_index_path(items: 10), class:"flex justify-center items-center gap-4 text-slate-300" do %>
        <%= inline_svg_tag('icons/user/settings-cog.svg', class: 'w-12 h-12 mx-8')%>
        <div class="border-l border-l-slate-300 px-8 py-12">
          <h1 class="text-2xl font-bold text-slate-100">Digital Ocean Spaces</h1>
          <p class="text-slate-300">Manage your Digital ocean space</p>
        </div>
      <% end %>
    </article>

    <article class="font-bold px-8 py-2 flex flex-nowrap gap-4 bg-slate-950 rounded-xl shadow-lg shadow-gray-950">
      <%= link_to admin_spam_requests_path(items: 10), class:"flex justify-center items-center gap-4 text-slate-300" do %>
        <%= inline_svg_tag('icons/user/settings-cog.svg', class: 'w-12 h-12 mx-8')%>
        <div class="border-l border-l-slate-300 px-8 py-12">
          <h1 class="text-2xl font-bold text-slate-100">Spam</h1>
          <p class="text-slate-300">Manage the requests spam from bots or malicious access</p>
        </div>
      <% end %>
    </article>
  <% end %>
  
  <article class="font-bold px-8 py-2 flex flex-nowrap gap-4 bg-slate-950 rounded-xl shadow-lg shadow-gray-950">
    <%= link_to new_admin_review_path, class:"flex justify-center items-center gap-4 text-slate-300" do %>
      <%= inline_svg_tag('icons/aside/star.svg', class: 'w-12 h-12 mx-8')%>
      <div class="border-l border-l-slate-300 px-8 py-12">
        <h1 class="text-2xl font-bold text-slate-100">Bodas.net Reviews</h1>
        <p class="text-slate-300">Check for new reviews in bodas.net</p>
      </div>
    <% end %>
  </article>
</section>