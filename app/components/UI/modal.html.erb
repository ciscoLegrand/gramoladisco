<%= turbo_frame_tag :modal do %>
  <dialog data-controller="dialog" data-action="click->dialog#clickOutside"
          class="backdrop:backdrop-filter backdrop:backdrop-blur-lg z-10 flex justify-center items-center bg-transparent transition-all duration-300 ease-in-out p-12">
    <div class="p-4 flex flex-col gap-8">
      <button class="w-8 h-8 border border-slate-950 bg-slate-100 rounded-full flex justify-center items-center" data-action="dialog#close">
        <%= inline_svg_tag('icons/notification/close.svg', class: 'w-7 h-7 stroke-4 stroke-slate-950')%>
      </button>

      <%= content %>

    </div>
  </dialog>
<% end %>