<%= form_with url: path,
              method: :post,
              autocomplete: 'disabled',
              class: 'w-full relative search-form-component focus:outline-none focus:shadow-outline',
              data: {
                controller: 'debounce',
                'debounce-target': 'form',
                'searcher-target': 'input'
              }  do |form| %>
              
  <%#= form.hidden_field :kind, value: kind if kind.present? %>
  <div class="relative flex justify-end">
    <%= form.search_field attribute.to_sym,
                          value: regex,
                          placeholder: placeholder,
                          data: {
                            debounce_target: 'input',
                            action: 'input->debounce#search'
                          },
                          class: 'w-1/3 bg-purple-white shadow rounded-xl border-0 p-3 duration-500 transition-500 focus:w-full focus:duration-500 focus:transition-500 focus:shadow-outline focus:outline-none focus:bg-blue-100 focus:border-orange-300',
                          autocomplete: 'off' %>

    <div class="absolute top-3 right-2 group-focus-within:scale-150 group-focus-within:duration-500 group-focus-within:text-corporation duration-500" data-debounce-target="icon">
      <%= inline_svg_tag('icons/shared/search.svg', class: 'w-6 h-6 stroke-gray-600')%>
    </div>
  </div>
<% end %>
