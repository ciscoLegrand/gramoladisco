<div class="text-white border-0 shadow-lg shadow-slate-950 rounded-xl min-h-[120px] min-w-[300px] overflow-hidden">
  <div class="w-1/2 md:w-full cursor-pointer relative">
    <figure class="aspect-w-4 aspect-h-3">
      <%= image_tag url_for(album.images.first), 
                    data: { src: "#{rails_blob_url(album.images.first)}"}, 
                    class: "object-cover" if album.images.attached? %>
    </figure>

    <%= link_to album_path(album), class: "w-full h-full opacity-0 hover:opacity-100 justify-center items-center p-4 absolute top-0 transition-all duration-300 hover:duration-300 bg-slate-950 bg-opacity-75 border-0 rounded-xl " do %>
      <div class="w-full flex-grow m-auto">
        <p class="text-lg md:text-xl dark:text-white mt-3"><%= "#{album.title}" %></p>
        <p class="text-lg md:text-sm dark:text-white">
          <time datetime="<%= album.date_event.strftime("%d-%m-%Y") if album.date_event.present? %>">
            <%= album.date_event.strftime("%d-%m-%Y") if album.date_event.present?%>
          </time>
        </p>
      </div>
    <% end %>
  </div>
</div>
